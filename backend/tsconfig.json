{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "rootDir": ".",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "types": ["node", "mocha", "chai"],
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src", "test/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}